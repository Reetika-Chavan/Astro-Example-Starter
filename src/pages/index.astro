---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';

export const prerender = true; 
---

<Layout>
  <Welcome />
  
  <div style="padding: 2rem; text-align: center;">
    <h2>Launch SSR Testing</h2>
    
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; gap: 1rem; justify-content: center; margin: 1rem 0; flex-wrap: wrap;">
        <a href="/ssrtest" style="display: inline-block; padding: 1rem 2rem; background: #4f46e5; color: white; text-decoration: none; border-radius: 8px; font-weight: bold;">
          SSR Test
        </a>
      </div>
    </div>
  </div>
</Layout>
