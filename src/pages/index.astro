---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';

export const prerender = true;
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<section id="hero">
			<a href="https://astro.build">
				<img src={astroLogo.src} width="115" height="48" alt="Astro Homepage" />
			</a>

			<h1>Launch's Demo Panel</h1>

			<!-- Buttons -->
			<section id="links">
				<a class="button" href="/ssr-demo">SSR Test</a>
				<a class="button" href="/ssg-demo" style="background: linear-gradient(83.21deg, #f59e0b 0%, #b45309 100%);">SSG Demo</a>
				<a class="button" href="/isr-demo" style="background: linear-gradient(83.21deg, #ef4444 0%, #b91c1c 100%);">ISR Demo</a>
				<a class="button" href="/cacheTags-purge-demo" style="background: linear-gradient(83.21deg, #8b5cf6 0%, #5b21b6 100%);">Cache Purge Demo</a>
			</section>
		</section>
	</main>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100vh; 
		display: flex;
		align-items: center;
		justify-content: center;
	}

	main {
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: center; 
		flex-direction: column;
		justify-content: center; 
		padding: 16px;
		text-align: center;
	}

	h1 {
		font-size: 24px;
		margin-top: 1em;
	}

	p {
		color: #4b5563;
		font-size: 16px;
		line-height: 24px;
		margin: 0.25em 0 1.5em;
	}

	#links {
		display: flex;
		gap: 16px;
		justify-content: center;
		flex-wrap: wrap;
		margin-top: 1em;
	}

	#links a.button {
		display: flex;
		align-items: center;
		padding: 10px 16px;
		color: white;
		text-decoration: none;
		border-radius: 10px;
		font-weight: bold;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.12),
		            inset 0 -2px 0 rgba(0, 0, 0, 0.24);
		transition: transform 0.2s, box-shadow 0.2s;
	}

	#links a.button:hover {
		transform: scale(1.05);
		box-shadow: none;
	}

	@media screen and (max-width: 768px) {
		#links a.button {
			padding: 12px 18px;
		}
	}
</style>
